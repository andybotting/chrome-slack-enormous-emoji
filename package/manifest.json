{
  "name": "Enormous Emoji for Slack",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Make Slack emoji's enormous!",
  "homepage_url": "https://github.com/andybotting/slack-enormous-emoji",
  "icons": { "16": "icon16.png",
             "48": "icon48.png",
             "128": "icon128.png" },
  "permissions": [
    "https://*.slack.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.slack.com/*"
      ],
      "css": [
        "src/inject/emoji.css"
      ]
    }
  ]
}
